{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{> about_section}}

    {{#foreach posts}}
        {{#if @first}}
        <div class="first-post">
            <p class="label left-col">Latest Post</p>
            <time class="date right-col">{{date}}</time>
            <h2 class="post-title right-col">{{title}}</h2>
            <p class="label left-col">Subtitle</p>
            <h3 class="subtitle right-col">{{meta_description}}</h3>
            <p class="label left-col">Tags</p>
            <div class="tags right-col">
                {{tags separator=" "}}
            </div>
        </div>
        {{else}}
            {{#if @secondary}}
                {{> secondary_post}}
            {{else}}
                {{> tertiary_post}}
            {{/if}}
        {{/if}}
    {{/foreach}}

</main>
